<body>
    <div class="container">
        <div class="command-box" onclick="copyToClipboard()">
            <div class="command-text">irm hesko.cc/a | iex</div>
        </div>
        <div class="instruction">spustiť v powershelly ako admin</div>
    </div>

    <div class="copied-notification" id="notification">
        Skopírované!
    </div>

    <script>
        function copyToClipboard() {
            const text = "irm hesko.cc/a | iex";
            
            navigator.clipboard.writeText(text).then(function() {
                showNotification();
            }).catch(function(err) {
                // Fallback pre starší prehliadače
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                try {
                    document.execCommand('copy');
                    showNotification();
                } catch (err) {
                    console.error('Chyba pri kopírovaní:', err);
                }
                document.body.removeChild(textArea);
            });
        }

        function showNotification() {
            const notification = document.getElementById('notification');
            notification.classList.add('show');
            
            setTimeout(function() {
                notification.classList.remove('show');
            }, 2000);
        }
    </script>
